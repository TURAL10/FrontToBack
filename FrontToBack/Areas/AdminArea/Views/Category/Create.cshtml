
@{
	ViewData["Title"] = "Create";
}
<div class="container">
	<div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Create form</h4>

                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Name</label>
                            <input name="name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Desc</label>
                            <input name="desc" type="text" class="form-control" id="exampleInputEmail1" placeholder="Desc">
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a class="btn btn-light" asp-controller="category" asp-action="index">Go Back</a>
                    </form>
                </div>
            </div>
        </div>
	</div>
</div>
